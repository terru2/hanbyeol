<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions> 
	<!-- base-definition --> 
	<definition name="home" template="/WEB-INF/views/home.jsp"> 
		<put-attribute name="setting" value="/WEB-INF/views/home_tiles/setting.jsp"/>
		<put-attribute name="top_nav" value="/WEB-INF/views/home_tiles/top_nav.jsp"/>
		<put-attribute name="map" value="/WEB-INF/views/home_tiles/map.jsp"/>
		<put-attribute name="side_bar" value="/WEB-INF/views/home_tiles/side_bar.jsp"/>
		<put-attribute name="login_signup" value="/WEB-INF/views/login/login_signup.jsp"/>		
	</definition> 
	
	<!-- Home Page --> 
	<definition name="map/*" extends="home"> 
		<put-attribute name="setting" value="/WEB-INF/views/home_tiles/setting.jsp"/>
		<put-attribute name="top_nav" value="/WEB-INF/views/home_tiles/top_nav.jsp"/>
		<put-attribute name="map" value="/WEB-INF/views/map/{1}.jsp"/>
		<put-attribute name="side_bar" value="/WEB-INF/views/home_tiles/side_bar.jsp"/>	
	</definition> 
	
</tiles-definitions>
